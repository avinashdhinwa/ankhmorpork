---
apiVersion: v1
kind: Endpoints
metadata:
  labels:
    k8s-app: kube-scheduler
  name: kube-scheduler-prometheus-discovery
  namespace: kube-system
subsets:
  - addresses:
      - ip: {{ k3s_master_ip }}
    ports:
      - name: http-metrics
        port: 10251
        
---
apiVersion: v1
kind: Service
metadata:
  labels:
    k8s-app: kube-scheduler
  name: kube-scheduler-prometheus-discovery
  namespace: kube-system
spec:
  clusterIP: None
  ports:
  - name: http-metrics
    port: 10251
    targetPort: 10251
#  selector:
#    component: kube-scheduler
